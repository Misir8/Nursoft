@model Testimonial

@{
    ViewBag.Title = "Rəyi sil";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Rəyi sil
    </h1>
</section>

<!-- Main content -->
<section class="content">

    <form asp-action="Delete" asp-controller="Testimonial">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Rəyi silməyi əminsiniz?</h3>
            </div>
            <div class="box-body">
                <div class="col-md-6">
                    <div>
                        <h3>@Model.Name</h3>
                        <div>@Model.Description</div>
                        <div>@Model.Position</div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a asp-action="Index" asp-controller="Testimonial" class="btn btn-default">Geriyə qayıt</a>
                <button type="submit" class="btn btn-warning pull-right">Sil</button>

            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </form>

</section>
<!-- /.content -->
