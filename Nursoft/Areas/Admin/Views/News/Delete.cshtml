@model News

@{
    ViewBag.Title = "Xəbəri sil";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Xəbəri sil
    </h1>
</section>

<!-- Main content -->
<section class="content">

  <form asp-action="Delete" asp-controller="News">
    <!-- Default box -->
      <div class="box">
          <div class="box-header with-border">
              <h3 class="box-title">Xəbəri silməyi əminsiniz?</h3>
          </div>
          <div class="box-body">
              <div class="col-md-6">
                  <div>
                      <img src="~/images/outsource/@Model.Image" style="width: 100px" alt="@Model.Image">
                      <h3>@Model.Name</h3>
                      <div>@Html.Raw(Model.Subtitle)</div>
                      <div>@Html.Raw(Model.Text)</div>
                  </div>
              </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
              <a asp-action="Index" asp-controller="News" class="btn btn-default">Geriyə qayıt</a>
              <button type="submit"  class="btn btn-warning pull-right">Sil</button>

          </div>
          <!-- /.box-footer-->
      </div>
      <!-- /.box -->
</form>

</section>
<!-- /.content -->
