@model Counter

@{
    Layout = "_Layout";
    ViewBag.Title = "Layihələrin dəyişdirmək";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Layihələrin dəyişdirmək
    </h1>
</section>

<!-- Main content -->
<section class="content">

    <form asp-action="Edit" asp-controller="Counter" method="post" enctype="multipart/form-data">
        <!-- Default box -->
        <div class="box">
            <div asp-validation-summary="All"></div>
            <div class="box-body">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Client"></label>
                        <input type="text" class="form-control" asp-for="Client" placeholder="">
                        <span asp-validation-for="Client"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Project"></label>
                        <input type="text" class="form-control" asp-for="Project" placeholder="">
                        <span asp-validation-for="Project"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Computer"></label>
                        <input type="text" class="form-control" asp-for="Computer" placeholder="">
                        <span asp-validation-for="Computer"></span>
                    </div>

                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a asp-action="Index" asp-controller="Counter" class="btn btn-default">Geriyə qayıt</a>
                <button type="submit" class="btn btn-warning pull-right edit">Dəyiş</button>
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </form>

</section>
<!-- /.content -->

@section script
{
    <partial name="_ValidationPartial" />
}
