@model Team

@{
    ViewBag.Title = "İşçini dəyiş";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        İşçini dəyişmək
    </h1>
</section>

<!-- Main content -->
<section class="content">

    <form asp-action="Edit" asp-controller="Team" method="post" enctype="multipart/form-data" >
        <!-- Default box -->
        <div class="box">
            <div style="color: red" asp-validation-summary="All"></div>
            <div class="box-body">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input type="text" class="form-control" asp-for="Name" placeholder="">
                        <span style="color: red;" asp-validation-for="Name"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input type="file" class="form-control" asp-for="Photo" name="Photo" accept="image/png, image/gif, image/jpeg, image/jpg"/>
                        <span style="color: red" asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>İndiki Şəkil</label>
                        <img src="~/images/outsource/@Model.Image" alt="@Model.Image" width="100"/>
                        <input type="hidden" name="Image" value="@Model.Image"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Position"></label>
                        <input  type="text" class="form-control" asp-for="Position" placeholder="">
                        <span style="color: red" asp-validation-for="Position"></span>
                    </div>


                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a asp-action="Index" asp-controller="Team" class="btn btn-default">Geriyə qayıt</a>
                <button type="submit" class="btn btn-warning pull-right edit">Dəyiş</button>
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </form>

</section>
<!-- /.content -->

@section script
{
    <partial name="_ValidationPartial"/>
    
}