@model IEnumerable<ContactUs>

@{
    ViewBag.Title = "Əlaqə məlumatları";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Slider
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> Əsas</a>
        </li>
        <li class="active">Əlaqə məlumatları</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="box">
        
        <!-- /.box-header -->
        <div class="box-body">
            <partial name="_WarningMessagePartial"/>
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Telefon nömrəsi</th>
                    <th>Hərəkətlər</th>
                    <th style="display: none"></th>
                    <th style="display: none"></th>
                    <th style="display: none"></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var contactUs in Model)
                {
                    <tr>
                        <td>@contactUs.Email</td>
                        <td>@contactUs.Address</td>
                        <td>@contactUs.Phone</td>
                        <td>
                            <a asp-action="Edit" asp-controller="ContactUs" asp-route-id="@contactUs.Id" class="fa fa-pencil"></a>
                        </td>

                        <td style="display: none"></td>
                        <td style="display: none"></td>
                        <td style="display: none"></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->

</section>
<!-- /.content -->
