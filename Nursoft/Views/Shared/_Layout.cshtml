@using Nursoft.Migrations
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <link href="~/animate.css/animate.min.css" rel="stylesheet" type="text/css">
    <link href="~/fontawesome/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,500,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,800,900" rel="stylesheet">
    <link href="~/chosen/chosen.min.css" rel="stylesheet" type="text/css">
    <link href="~/jquery-ui-custom/jquery-ui.min.css" rel="stylesheet" type="text/css">
    <link href="~/pentix/css/pentix.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/pex-theme.min.css" rel="stylesheet" type="text/css">
    @RenderSection("styles", false)
</head>
<body class="body loader-loading">
    <header class="header header-over">
        <input id="header-default" type="radio" class="collapse" checked="checked" name="siteheader">
        <input id="header-shown" type="radio" class="collapse" name="siteheader">
        <input id="header-hidden" type="radio" class="collapse" name="siteheader">
        <div class="infobar transparent bottom-separator xs-hidden">
            <div class="container">
                <div class="cols-list pull-left cols-md">
                    <div class="list-item">
                        <span class="info-icon">
                            <i class="fas fa-home" aria-hidden="true"></i>
                        </span>5-ci mkr., Dəmir Bankla üzbəüz, Sumqayıt
                    </div>
                    <div class="list-item">
                        <span class="info-icon">
                            <i class="fas fa-phone"></i>
                        </span>Tel: + 018 642-02-21
                    </div>
                </div>
            </div>
        </div>
        <nav class="stick-menu menu-wrap simple line transparent">
            <div class="menu-container menu-row">
                <div class="logo">
                    <a asp-action="Index" asp-controller="Home">
                        <img src="~/images/service/nursoft.png" alt="nursoft">
                    </a>
                </div>
                <div class="header-toggler pull-right xs-shown">
                    <label class="header-shown-sign" for="header-hidden">
                        <i class="fas fa-times" aria-hidden="true"></i>
                    </label>
                    <label class="header-hidden-sign" for="header-shown">
                        <i class="fas fa-bars" aria-hidden="true"></i>
                    </label>
                </div>
                <div class="clearfix xs-shown"></div>
                <div class="menu">
                    <ul class="menu-items">
                        <li>
                            <a asp-controller="Home" asp-action="Index">Əsas</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="About">Haqqında</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Products">Məhsullar</a>
                        </li>
                        <li>
                            <a asp-controller="Services" asp-action="Index">Xidmətlər</a>
                        </li>
                        <li>
                            <a asp-controller="News" asp-action="Index">Yeniliklər</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Contact">Əlaqə</a>
                        </li>
                        <li>
                            <span class="menu-item">İstifadəçi</span>
                            <span class="toggle-icon">
                                <i class="fas fa-chevron-down" aria-hidden="true"></i>
                            </span>
                            <ul>
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <li>
                                        <a asp-controller="Account" asp-action="Register">Qeydiyyat</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Account" asp-action="Login">Daxil ol</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <form asp-action="LogOff" asp-controller="Account">
                                            <input type="submit" value="Çıx" style="background: transparent;padding: 5px 10px; border: none">
                                        </form>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li >
                            <a asp-controller="cart" asp-action="index"><i class='fas fa-shopping-cart' aria-hidden='true'></i>
                             <span class='item-label-sale item-label'>@await Component.InvokeAsync("SmallCart")</span>
                            </a>
                        </li>
                        
                    </ul>
                    <div class="clearfix"></div>
                    <div class="line-right xs-hidden"></div>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()
    <footer class="footer" style="background: #35354a; color: #fff">
        <div class="container only-xs-text-justify-center">
            <div class="solid-section">
                <div class="row cols-md">
                    <div class="sm-col-3">
                        <div class="footer-logo">
                            <img src="~/images/service/nursoft.png" alt="ProFix">
                        </div>
                        <div class="footer-text">NURSOFT” MMC 2007-ci ildən kompüter avadanlıqlarına texniki xidmət göstərilməsi, proqram təminatının hazırlanması, kompütür avadanlıqlarının satışı, təhlükəsizlik kameralarının quraşdırılması ilə məşğul olur</div>
                    </div>
                    <div class="sm-col-8 sm-push-1">
                        <div class="row cols-md">
                            <div class="sm-col-4">
                                <div class="footer-title alt-color text-upper" style="color:#fff">Ünvan</div>
                                <div class="footer-text">@await Component.InvokeAsync("Address")</div>
                            </div>
                            <div class="sm-col-4">
                                <div class="footer-title alt-color text-upper" style="color:#fff">Əlaqə</div>
                                <div class="footer-text">
                                    @await Component.InvokeAsync("Phone")
                                    <br>@await Component.InvokeAsync("Email")
                                </div>
                            </div>
                            <div class="sm-col-4">
                                <div class="footer-title alt-color text-upper" style="color:#fff">SOSİAL ŞƏBƏKƏ</div>
                                <div class="cols-list socials cols-sm inline-block">
                                    <a href="https://www.facebook.com/komputermerkez/" class="list-item">
                                        <i class="fab fa-facebook-f" aria-hidden="true"></i>
                                    </a>
                                    <a href="https://www.instagram.com/nursoftaz/" class="list-item">
                                        <i class="fab fa-instagram" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-copyrights text-center top-separator ins-md">
                &copy 2020
                <b>Nursoft</b>. Bütün hüquqlar qorunur
            </div>
        </div>
    </footer>
    <script src="~/js/jquery-1.12.4.min.js">

    </script>
    <script src="~/lib/notify.min.js"></script>
    <script src="~/parallax.js/parallax.min.js">

    </script>
    <script src="~/flexslider/jquery.flexslider-min.js">

    </script>
    <script src="~/owlcarousel2/owl.carousel.min.js">

    </script>
    <script src="~/shuffle/shuffle.min.js"></script>
    <script src="~/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/chosen/chosen.jquery.min.js"></script>
    <script src="~/jquery-ui-custom/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/pentix/js/pentix.min.js" type="text/javascript"></script>
    <script src="~/js/script.js" type="text/javascript"></script>
    @RenderSection("scripts", false)
</body>
</html>