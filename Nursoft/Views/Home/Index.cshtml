@model HomeIndexViewModel;
@{
    ViewData["Title"] = "Əsas";
    Layout = "_Layout";
}
@section styles
{
    <style>
        div .item-text {
           white-space: pre-wrap;
           overflow: hidden;
           padding: 5px;
           text-overflow: ellipsis;
        }
    </style>
}
<section>
    <div class="flexslider screen-height">
        <div class="slides">
            @foreach (var slider in Model.Sliders)
            {
                <div class="slide">
                    <img src="~/images/service/@slider.Image" alt="" data-cover-image="true">
                    <div class="theme-back"></div>
                    <div class="pos-center text-center col-12 text-white">
                        @if (slider.Title != null)
                        {
                            <div class="banner-title res-text-xxl">@Html.Raw(slider.Title)</div>
                        }
                        @if (slider.Subtitle != null)
                        {
                            <div class="banner-subtitle res-text-md">@Html.Raw(slider.Subtitle)</div>
                        }
                    </div>
                </div>
            }
        </div>
        <div class="flex-custom-navigation">
            <a href="#" class="flex-prev">
                <i class="fas fa-angle-left" aria-hidden="true"></i>
            </a>
            <a href="#" class="flex-next">
                <i class="fas fa-angle-right" aria-hidden="true"></i>
            </a>
        </div>
    </div>
</section>
<div class="clearfix muted-bg">
    <section class="content-section">
        <div class="container">
            <div class="section-head text-center container-md">
                <h2 class="section-title text-upper text-lg" data-inview-showup="showup-translate-right">NİYƏ BİZİ SEÇİRLƏR</h2>
                <p data-inview-showup="showup-translate-left">Bizim əsas xüsusiyyətlərimiz</p>
            </div>
            <div class="row cols-md rows-lg text-center">
                <div class="md-col-12">
                    <div class="row cols-md rows-lg">
                        @foreach (var feature in Model.Features)
                        {
                            <div class="md-col-3">
                                <div class="feature feature-side text-left" data-inview-showup="showup-translate-up">
                                    <div class="feature-icon">
                                        <i class="fas fa-rocket" aria-hidden="true"></i>
                                    </div>
                                    <div class="feature-title text-upper">@feature.Name</div>
                                    <div class="feature-text">@feature.Description</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<section class="muted-bg solid-section">
    <div class="container">
        <div class="section-head text-center container-md">
            <h2 class="section-title text-upper text-lg" data-inview-showup="showup-translate-right">XİDMƏTLƏRİMİZ</h2>
            <p data-inview-showup="showup-translate-left">Təcrübəli ixtisaslaşdırılmış komanda tərəfindən professional xidmət təklif edirik</p>
        </div>
        <div class="row cols-md rows-md">
            @foreach (var service in Model.Services)
            {
                <div class="md-col-4 sm-col-6">
                    <div class="item" data-inview-showup="showup-translate-up">
                        <a asp-action="Service" asp-route-id="@service.Id" asp-controller="Services" class="block-link text-center">
                            <span class="image-wrap">
                                <img class="image" src="images/service/@service.Image" alt="">
                            </span>
                            <span class="hover">
                                <span class="hover-show">
                                    <span class="back"></span>
                                    <span class="content">
                                        <i class="fas fa-search" aria-hidden="true"></i>
                                    </span>
                                </span>
                            </span>
                        </a>
                        <div class="item-content">
                            <div class="item-title text-upper">
                                <a  asp-action="Service" asp-route-id="@service.Id" asp-controller="Services">@Html.Raw(service.Name)</a>
                            </div>
                            <a asp-action="Service" asp-route-id="@service.Id" asp-controller="Services" class="btn btn-md btns-bordered pull-right text-upper">Ətraflı</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center shift-xl">
            <a class="btn text-upper" asp-action="Index" asp-controller="Services" data-inview-showup="showup-translate-up">
                <i class="fas fa-th-large" aria-hidden="true"></i>&nbsp;
                &nbsp;Bütün xidmətləri göstər
            </a>
        </div>
    </div>
</section>
<section class="main-bg decorated-bg text-center tight solid-section">
    <div class="container">
        <div class="row cols-md rows-xl" data-inview-showup="showup-translate-up">
            <div class="sm-col-4">
                <div class="counter">
                    <div class="counter-title text-upper">Razı müştərilər</div>
                    <div class="counter-value" data-waypoint-counter="@Model.Counters.ElementAt(0).Client">@Model.Counters.ElementAt(0).Client</div>
                </div>
            </div>
            <div class="sm-col-4">
                <div class="counter">
                    <div class="counter-title text-upper">Görülən işlər</div>
                    <div class="counter-value" data-waypoint-counter="@Model.Counters.ElementAt(0).Project">@Model.Counters.ElementAt(0).Project</div>
                </div>
            </div>
            <div class="sm-col-4">
                <div class="counter">
                    <div class="counter-title text-upper">Təmir olan komputerlər</div>
                    <div class="counter-value" data-waypoint-counter="@Model.Counters.ElementAt(0).Computer">@Model.Counters.ElementAt(0).Computer</div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="content-section">
    <div class="container">
        <div class="section-head text-center container-md">
            <h2 class="section-title text-upper text-lg" data-inview-showup="showup-translate-right">MÜŞTƏRİLƏR NƏ DEYİR</h2>
            <p data-inview-showup="showup-translate-left">Real müştərilərin rəyi</p>
        </div>
        <div class="owl-carousel" data-inview-showup="showup-translate-up" data-owl-dots="true">
            @foreach (var testimonial in Model.Testimonials)
            {
                <div class="item">
                    <div class="simple-testimonial text-center">
                        <div class="tt-content">
                            <div class="tt-quote">&#8220;</div>
                            @testimonial.Description
                        </div>
                        <div class="pexx-tt-user-title">@testimonial.Name</div>
                        <div class="pexx-tt-user-subtitle">@testimonial.Position</div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<section class="main-bg" data-inview-showup="showup-translate-up">
    <div class="container">
        <div class="contact-table only-xs-text-center">
            <div class="contact-icon xs-hidden">
                <i class="fas fa-bicycle" aria-hidden="true"></i>
            </div>
            <div class="contact-content">
                <div class="contact-title">Ödənişsiz konsultasiya sifariş et</div>
                <div class="text-justify only-xs-text-justify-center">İstənilən işçidən sualınıza cavab və məsləhətlər alın.</div>
            </div>
            <div class="contact-btn">
                <a asp-action="Index" asp-controller="Contact" class="btn btns-white text-upper">BİZİMLƏ ƏLAQƏ</a>
            </div>
        </div>
    </div>
</section>
<a href="#" class="scroll-top disabled">
    <i class="fas fa-angle-up" aria-hidden="true"></i>
</a>
<div class="loader-block">
    <div class="loader-back alt-bg"></div>
    <div class="loader-image">
        <img class="image" src="images/parts/loader.gif" alt="">
    </div>
</div>