@model IEnumerable<News>
@{
    ViewData["Title"] = "News";
}

@section styles
{
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
}
<section class="with-bg solid-section">
    <div class="theme-back"></div>
    <div class="container page-info">
        <div class="section-alt-head container-md">
        </div>
    </div>
    <div class="section-footer">
        <div class="container" data-inview-showup="showup-translate-down">
            <ul class="page-path">
                <li>
                    <a asp-action="Index" asp-controller="Home">Home</a>
                </li>
                <li class="path-separator">
                    <i class="fas fa-chevron-right" aria-hidden="true"></i>
                </li><li>News</li>
            </ul>
        </div>
    </div>
</section>
<div class="clearfix page-sidebar-right container">
    <div class="page-content" style="padding-right: 0">
        <section class="content-section">
            <div class="articles">
                @foreach (var news in Model)
                {
                    <article class="article" data-inview-showup="showup-translate-up">
                        <a asp-action="Details" asp-route-id="@news.Id" class="block-link text-center offs-lg">
                            <span class="image-wrap">
                                <img class="image" src="~/images/outsource/@news.Image" alt="@news.Image">
                            </span>
                            <span class="hover">
                                <span class="hover-show">
                                    <span class="back"></span>
                                    <span class="content">
                                        <i class="fas fa-search" aria-hidden="true"></i>
                                    </span>
                                </span>
                            </span>
                        </a>
                        <h3 class="offs-sm">
                            <a class="content-link" asp-action="Details" asp-route-id="@news.Id">@news.Name</a>
                        </h3>
                        <p>@news.Subtitle</p>
                        <div class="table">
                            <div class="col text-right">
                                <a asp-action="Details" asp-route-id="@news.Id" class="btn btn-md btns-bordered text-upper">read more</a>
                            </div>
                        </div>
                    </article>
                }
            </div>
            <div class="d-flex w-100 justify-content-center">
              <Pagination page-count="@ViewBag.TotalPages" page-target="/news/index" page-number="@ViewBag.Page" page-range="@ViewBag.PageRange"></Pagination>
            </div>
        </section>
    </div>
</div>
<a href="#" class="scroll-top disabled">
    <i class="fas fa-angle-up" aria-hidden="true"></i>
</a>
<div class="loader-block">
    <div class="loader-back alt-bg"></div>
    <div class="loader-image">
        <img class="image" src="~/images/parts/loader.gif" alt="">
    </div>
</div>